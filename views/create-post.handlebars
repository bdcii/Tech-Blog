<section>
    <a href="/dashboard" class="is-pulled-right"> &larr; back to dashboard</a>
    <h2 class="title">create new blog post</h2>
    <hr>

    <form class="new-post-form">
        <div>
            <label for="post-title">title:</label>
            <input class="input" type="text" id="post-title" name="post-title" placeholder="insert blog title here" />
        </div>
        <div>
            <label for="post-body">content:</label>
            <input class="textarea is-large" id="post-body" name="post-body"
                placeholder="insert blog content here" />
        </div>
        <button type="submit" class="button is-pulled-right">create post</button>
    </form>
</section>

<script src="/public/js/add-post.js"></script>